<mvc:View xmlns:core="sap.ui.core" xmlns:mvc="sap.ui.core.mvc" xmlns="sap.m" xmlns:html="http://www.w3.org/1999/xhtml" controllerName="TiCS.controller.TaskDataDetail">
	<App>
		<pages><Page title="{i18n>TaskDetail}">
				<content>
				    <HBox width="100%" id="__hbox0">
				        <items>
				            <Button text="Add" width="100px" id="__buttonAdd" icon="sap-icon://add"/>
				            <Button text="Delete" width="100px" id="__buttonDelete" icon="sap-icon://delete"/>
				        </items>
				    </HBox>
					<VBox width="100%" direction="Column" id="__vbox0">
						<items>
							<Table id="__tableTaskDataDetail" headerText="Task Detail" growing="true" items="{/TASK_SET}">
								<items>
									<ColumnListItem>
										<Text text="{Task}"/>
										<Text text="{TDetail}"/>
									</ColumnListItem>
								</items>
								<columns>
									<Column id="__columnTaskName">
										<header>
											<Label text="Task Name" id="__label0"/>
										</header>
									</Column>
									<Column id="__columnTaskDescription">
										<header>
											<Label text="Description" id="__label1"/>
										</header>
									</Column>
								</columns>
							</Table>
						</items>
					</VBox>
				</content>
			</Page>
		</pages>
	</App>

</mvc:View>