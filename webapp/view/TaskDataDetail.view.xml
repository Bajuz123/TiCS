<mvc:View xmlns:core="sap.ui.core" xmlns:mvc="sap.ui.core.mvc" xmlns="sap.m" xmlns:html="http://www.w3.org/1999/xhtml" controllerName="TiCS.controller.TaskDataDetail">
	<App>
		<pages><Page title="{i18n>TaskDetailTitle}">
			<content>
			    <VBox width="100%" direction="Column" id="__vbox1">
			        <items>
			            <VBox width="100%" direction="Column" id="__vbox0">
			                <items>
			                    <ComboBox selectedItem="Element sap.ui.core.ListItem#__item12" value="List Item 1" selectedKey="item1" selectedItemId="__item12" id="__boxProjectNumber" placeholder="{i18n>ProjectNumber}">
			                        <items>
			                            <core:ListItem text="Project Number1" key="item1" id="__item12"/>
			                            <core:ListItem text="Project Number2" key="item2" id="__item13"/>
			                           </items>
			                    </ComboBox>
			                </items>
			            </VBox>
			            <HBox width="100%" id="__hbox5">
			                <items>
			                    <ComboBox selectedItem="Element sap.ui.core.ListItem#__item9" value="List Item 1" selectedKey="item1" selectedItemId="__item9" id="__boxBillingKey" placeholder="{i18n>BillingKey}">
			                        <items>
			                            <core:ListItem text="Billing Key1" key="item1" id="__item9"/>
			                            <core:ListItem text="Billing Key2" key="item2" id="__item10"/>
			                            </items>
			                    </ComboBox>
			                </items>
			            </HBox>
			            <HBox width="100%" id="__hbox3">
			                <items>
			                    <ComboBox selectedItem="Element sap.ui.core.ListItem#__item6" value="List Item 1" selectedKey="item1" selectedItemId="__item6" id="__boxProjectKey" placeholder="{i18n>ProjectKey}">
			                        <items>
			                            <core:ListItem text="ProjectKey1" key="item1" id="__item6"/>
			                            <core:ListItem text="ProjectKey2" key="item2" id="__item7"/>
			                            </items>
			                    </ComboBox>
			                </items>
			            </HBox>
			            <HBox width="100%" id="__hbox2">
			                <items>
			                    <ComboBox selectedItem="Element sap.ui.core.ListItem#__item3" value="List Item 1" selectedKey="item1" selectedItemId="__item3" id="__boxTask" placeholder="{i18n>Task}">
			                        <items>
			                            <core:ListItem text="Task1" key="item1" id="__item3"/>
			                            <core:ListItem text="Task2" key="item2" id="__item4"/>
			                            </items>
			                    </ComboBox>
			                </items>
			            </HBox>
			            <VBox width="100%" direction="Column" id="__vbox3">
			                <items>
			                    <Input width="100%" id="__inputTaskDescription" value="TaskDescription" description="{i18n>TaskDescription}" editable="false"/>
			                    <Input width="100%" id="__inputCancel" description="{i18n>Comment}"/>
			                </items>
			            </VBox>
			            
			        </items>
			    </VBox>
			    <HBox width="100%" id="__hbox0">
			        <items>
			            <Button text="OK" width="100px" id="__buttonOK" icon="sap-icon://add"/>
			            <Button text="{i18n>Cancel}" width="100px" id="__buttonCancel" icon="sap-icon://sys-cancel"/>
			        </items>
			    </HBox>
			</content>
			</Page>
		</pages>
	</App>

</mvc:View>