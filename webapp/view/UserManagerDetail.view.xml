<mvc:View xmlns:core="sap.ui.core" xmlns:mvc="sap.ui.core.mvc" xmlns="sap.m" xmlns:html="http://www.w3.org/1999/xhtml" controllerName="TiCS.controller.UserManager">
	<App>
		<pages>
			<Page title="{i18n>UserManagerTitle}">
			<footer>
			    <Bar class="sapContrast sapContrastPlus" id="__bar0">
			        <contentLeft>
			        </contentLeft>
			    <contentMiddle>
			    </contentMiddle>
			    <contentRight>
			        <Button text="Add" width="100px" id="__buttonAdd" icon="sap-icon://add" press="onAddClick"/>
			        <Button text="Delete" width="100px" id="__buttonDelete" icon="sap-icon://delete"/>
			        <Button text="Edit" width="100px" id="__buttonEdit" icon="sap-icon://edit"/>
			    </contentRight>
			    </Bar>
			</footer>
			<content>
			    <sap.ui.layout.form:SimpleForm editable="true" layout="ResponsiveGridLayout" xmlns:sap.ui.layout.form="sap.ui.layout.form" id="__form0">
			        <sap.ui.layout.form:content>
			            <Label text="{i18n>User}" id="__labelUser"/>
			            <Input width="50%" id="__inputUser"/>
			            <Label text="{i18n>Permission}" id="__labelPermission"/>
			            <Input width="50%" id="__inputPermission"/></sap.ui.layout.form:content>
			    </sap.ui.layout.form:SimpleForm>
			</content>
			</Page>
		</pages>
	</App>
</mvc:View>