<mvc:View xmlns:core="sap.ui.core" xmlns:mvc="sap.ui.core.mvc" xmlns="sap.m" xmlns:html="http://www.w3.org/1999/xhtml" controllerName="TiCS.controller.ProjectDetail">
	<App>
		<pages><Page title="{i18n>ProjectDetailTitle}" showSubHeader="false">
			<footer>
			    <Bar id="__bar0">
			        <contentMiddle>
			        </contentMiddle>
			    <contentRight>
			        <Button xmlns="sap.m" text="OK" width="100px" id="__buttonOk" icon="sap-icon://accept" press="onOKClick"/>
			        <Button xmlns="sap.m" text="Cancel" width="100px" id="__buttonCancel" icon="sap-icon://sys-cancel" press="onCancelClick"/>
			    </contentRight>
			    </Bar>
			</footer>
			<content>
			    <VBox width="100%" direction="Column" id="__vbox0">
			    <items>
			        <sap.ui.layout.form:SimpleForm xmlns:sap.ui.layout.form="sap.ui.layout.form" editable="true" layout="ResponsiveGridLayout" id="__form16" labelMinWidth="800">
			            <sap.ui.layout.form:content>
			                <Label text="Project" id="__labelProject"/>
			                <Input width="50%" id="__inputProject" fieldWidth="100%"/>
			                <Label text="Project Description" width="100%" id="__labelProjectDesc" textDirection="LTR"/>
			                <Input width="50%" id="__inpuProjectDesc" fieldWidth="100%" maxLength="20"/>
			            </sap.ui.layout.form:content>
			        </sap.ui.layout.form:SimpleForm>
			    </items>
			    </VBox>
			</content>
			</Page>
		</pages>
	</App>
</mvc:View>