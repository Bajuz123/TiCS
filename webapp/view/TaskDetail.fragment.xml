<core:FragmentDefinition xmlns:core='sap.ui.core' xmlns='sap.m'>
	<Dialog title="{i18n>TaskDetailTitle}">
		<beginButton>
			<Button xmlns="sap.m" width="50px" id="__buttonTaskOk" icon="sap-icon://accept" press="onOKClick"/>
		</beginButton>
		<endButton>
			<Button xmlns="sap.m" width="50px" id="__buttonTaskCancel" icon="sap-icon://sys-cancel" press="onCancelClick"/>
		</endButton>
		<VBox xmlns:core="sap.ui.core" xmlns:mvc="sap.ui.core.mvc" xmlns:html="http://www.w3.org/1999/xhtml" xmlns="sap.m" width="100%"
			direction="Column" id="__vboxVertical">
			<items>
				<sap.ui.layout.form:SimpleForm xmlns:sap.ui.layout.form="sap.ui.layout.form" editable="true" layout="ResponsiveGridLayout" id="__formSimple"
					labelMinWidth="800">
					<sap.ui.layout.form:content>
						<Label text="{i18n>Task}" id="__labelTask"/>
						<Input width="50%" id="__inputTask" value="{SelectedTask>/aufgabe}"/>
						<Label text="{i18n>TasktDescription}" width="100%" id="__labelTaskDesc" textDirection="LTR"/>
						<Input width="50%" id="__inpuTaskDesc" maxLength="20" value="{SelectedTask>/beschreibung}"/>
					</sap.ui.layout.form:content>
				</sap.ui.layout.form:SimpleForm>
			</items>
		</VBox>
	</Dialog>
</core:FragmentDefinition>