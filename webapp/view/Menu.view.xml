<mvc:View xmlns:core="sap.ui.core" xmlns:mvc="sap.ui.core.mvc" xmlns="sap.m" xmlns:html="http://www.w3.org/1999/xhtml" controllerName="TiCS.controller.Menu">
	<App>
		<pages>
			<Page title="">
				<content>
				    <SelectList selectedItem="item1" selectedKey="item1" id="__menuList" itemPress="onMenuClick">
				        <items>
				            <core:ListItem text="Projects" key="item1" id="__item1"/>
				            <core:ListItem text="TiCS" key="item2" id="__item2"/>
				            <core:ListItem text="Users" key="item3" id="__item3"/>
				            <core:ListItem text="Logout" key="item4" id="__item4"/></items>
				    </SelectList>
				</content>
			<headerContent>
				<HBox width="100%" id="__hbox0" alignItems="Start" alignContent="Start">
				<items>
					<Label text="{i18n>Version}" width="100%" id="__labelVersion"/>
					<Button text="SVK" width="42px" height="10px" id="__buttonSVKImg" icon="resources/svk.jpg" press="onSVKLanguChange"/>
					<Button text="DE" width="42px" height="10px" id="__buttonDEImg" icon="resources/ger.jpg" press="onDELanguChange"/>
				</items>
				</HBox>
			</headerContent>
			</Page>
		</pages>
	</App>
</mvc:View>