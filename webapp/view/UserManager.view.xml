<mvc:View xmlns:core="sap.ui.core" xmlns:mvc="sap.ui.core.mvc" xmlns="sap.m" xmlns:html="http://www.w3.org/1999/xhtml" controllerName="TiCS.controller.UserManager">
	<App>
		<pages>
			<Page title="{i18n>UserManagerTitle}"> 
				<content>
				    <HBox width="100%" id="__hbox0">
				        <items>
				            <Button width="100px" id="__buttonAdd" icon="sap-icon://add" text="Add"/>
				            <Button text="Delete" width="100px" id="__buttonDelete" icon="sap-icon://delete"/>
				            <Button text="Edit" width="100px" id="__buttonEdit" icon="sap-icon://edit"/>
				        </items>
				    </HBox>
				   <Table id="__tableUser" growing="true" items="{tics>/USER_SET}">
								<items>
									<ColumnListItem>
										<Text text="{tics>name}"/>
										<Text text="{tics>permission}"/>
									</ColumnListItem>
								</items>
								<columns>
									<Column id="__columnUName">
										<header>
											<Label text="User Name" id="__label0"/>
										</header>
									</Column>
									<Column id="__columnPermission">
										<header>
											<Label text="Permission" id="__label1"/>
										</header>
									</Column>
								</columns>
							</Table>
				</content>
			</Page>
		</pages>
	</App>
</mvc:View>